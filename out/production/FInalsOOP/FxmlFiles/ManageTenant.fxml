<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ManageTenantController"
            prefHeight="600.0" prefWidth="800.0">

    <!-- Sidebar -->
    <AnchorPane fx:id="sidebar" prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #34495e;" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0">
        <children>
            <ImageView fitHeight="120.0" fitWidth="120.0" layoutX="40.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../img/Dorm.png" />
                </image>
            </ImageView>
            <Button fx:id="roomManage" layoutX="20.0" layoutY="160.0" prefWidth="160.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" text="Manage Rooms" />
            <Button fx:id="manageNewTenant" layoutX="20.0" layoutY="200.0" prefWidth="160.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" text="Manage New Tenant" />
            <Button fx:id="manageTenant" layoutX="20.0" layoutY="240.0" prefWidth="160.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" text="Manage Tenants" />
            <Button layoutX="20.0" layoutY="280.0" prefWidth="160.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" text="Manage Facilities" />
            <Button layoutX="20.0" layoutY="520.0" prefWidth="160.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Logout" />
        </children>
    </AnchorPane>

    <!-- Main Content -->
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="220" AnchorPane.rightAnchor="10">
        <Text text="Manage Tenants" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <TextField fx:id="searchField" promptText="Search Tenants" onKeyReleased="#onSearch" />
        <TableView fx:id="tenantsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
                <TableColumn fx:id="roomColumn" text="Room" prefWidth="100" />
                <TableColumn fx:id="stayFromColumn" text="Stay From" prefWidth="100" />
                <TableColumn fx:id="stayToColumn" text="Stay To" prefWidth="100" />
                <TableColumn fx:id="genderColumn" text="Gender" prefWidth="100" />
                <TableColumn fx:id="mobileNumberColumn" text="Mobile" prefWidth="120" />
                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="180" />
            </columns>
        </TableView>
    </VBox>

</AnchorPane>
