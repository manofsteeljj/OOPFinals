<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="1006.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RoomManageAction">

    <!-- Sidebar -->
    <AnchorPane fx:id="sidebar" prefHeight="600.0" prefWidth="235.0" style="-fx-background-color: #34495e;">
        <children>
            <Button fx:id="roomManage" layoutX="38.0" layoutY="172.0" prefWidth="160" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" text="Manage Rooms" />
            <Button fx:id="manageNewTenant" layoutX="38.0" layoutY="211.0" prefWidth="160" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" text="Manage New Tenant" />
            <Button fx:id="manageTenant" layoutX="38.0" layoutY="251.0" prefWidth="160" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" text="Manage Tenants" />
            <Button fx:id="manageFacility" layoutX="38.0" layoutY="291.0" prefWidth="160" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" text="Manage Facilities" />
            <Button fx:id="logoutButton" layoutX="38.0" layoutY="544.0" prefWidth="160" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Logout" />
            <ImageView fitHeight="146.0" fitWidth="184.0" layoutX="45.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../img/Dorm.png" />
                </image>
            </ImageView>

        </children>
    </AnchorPane>


    <!-- Main Content -->
    <AnchorPane layoutX="250.0" prefHeight="600.0" prefWidth="755.0">
        <children>
            <!-- Room Details -->
            <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Manage Room" />
            <Label layoutX="20.0" layoutY="60.0" style="-fx-font-size: 16px;" text="Room Number: " />
            <Label fx:id="roomNumberLabel" layoutX="150.0" layoutY="60.0" style="-fx-font-size: 16px;" text="" />

            <Label layoutX="20.0" layoutY="100.0" style="-fx-font-size: 16px;" text="Room Type: " />
            <Label fx:id="roomTypeLabel" layoutX="150.0" layoutY="100.0" style="-fx-font-size: 16px;" text="" />

            <Label layoutX="20.0" layoutY="140.0" style="-fx-font-size: 16px;" text="Total Slots: " />
            <Label fx:id="totalSlotsLabel" layoutX="150.0" layoutY="140.0" style="-fx-font-size: 16px;" text="" />

            <Label layoutX="20.0" layoutY="180.0" style="-fx-font-size: 16px;" text="Remaining Slots: " />
            <Label fx:id="remainingSlotsLabel" layoutX="150.0" layoutY="180.0" style="-fx-font-size: 16px;" text="" />

            <!-- Tenants Table -->
            <Label layoutX="20.0" layoutY="220.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Tenants" />
            <TableView fx:id="tenantsTable" layoutX="20.0" layoutY="260.0" prefHeight="300.0" prefWidth="719.0">
                <columns>
                    <TableColumn fx:id="tenantIdCol" prefWidth="51.0" text="ID#" />
                    <TableColumn fx:id="tenantNameCol" prefWidth="120.0" text="Name" />
                    <TableColumn fx:id="tenantGenderCol" prefWidth="93.0" text="Gender" />
                    <TableColumn fx:id="tenantContactCol" prefWidth="97.0" text="Contact#" />
                    <TableColumn fx:id="tenantStayFromCol" prefWidth="97.0" text="Stay From" />
                    <TableColumn fx:id="tenantStayToCol" prefWidth="88.0" text="Stay To" />
                    <TableColumn fx:id="tenantActionsCol" prefWidth="172.0" text="Actions" />
                </columns>
            </TableView>
        </children>
    </AnchorPane>

</AnchorPane>
